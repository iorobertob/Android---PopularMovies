<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iopatterns.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"

            android:launchMode="singleTop">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"/>

                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MovieDetails"
            android:parentActivityName=".MainActivity">
        </activity>

        <provider
            android:name="com.iopatterns.popularmovies.movieDataSystem.DataBaseProvider"
            android:authorities="com.iopatterns.popularmovies"
            android:exported="false">
        </provider>

        <receiver android:name=".widget.MovieWidgetProvider" >
            <intent-filter>
                <action
                    android:name="android.appwidget.action.APPWIDGET_UPDATE" >
                </action>
                <action
                    android:name="com.iopatterns.popularmovies.ACTION_DATA_UPDATED">
                </action>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/movie_widget_info" >
            </meta-data>
        </receiver>

    </application>

</manifest>